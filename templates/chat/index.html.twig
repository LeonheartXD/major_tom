{% extends 'base.html.twig' %}

{% block title %}Chat index{% endblock %}

{% block body %}
    <h1>Chat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Genre</th>
                <th>Chaton</th>
                <th>Title</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chat in chats %}
            <tr>
                <td>{{ chat.id }}</td>
                <td>{{ chat.name }}</td>
                <td>{{ chat.genre ? 'Yes' : 'No' }}</td>
                <td>{{ chat.chaton ? 'Yes' : 'No' }}</td>
                <td>{{ chat.title }}</td>
                <td>{{ chat.text }}</td>
                <td>
                    <a href="{{ path('chat_show', {'id': chat.id}) }}">show</a>
                    <a href="{{ path('chat_edit', {'id': chat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chat_new') }}">Create new</a>
{% endblock %}
