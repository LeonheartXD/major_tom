{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <h1>Chat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ chat.name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ chat.genre ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Chaton</th>
                <td>{{ chat.chaton ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ chat.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ chat.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('chat_index') }}">back to list</a>

    <a href="{{ path('chat_edit', {'id': chat.id}) }}">edit</a>

    {{ include('chat/_delete_form.html.twig') }}
{% endblock %}
