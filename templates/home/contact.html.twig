{% extends 'base.html.twig' %}
{% block title %}contact{% endblock title %}
{% block body %}
	 <div class="container">
      <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-6 col-xs-6">
  		
   			  <img src="public/image/ou.png"  class="img-contact" id="taille_ou" alt="Responsive image" >
				    <p class="p_contact"> Nous résidons dans la Somme en France</br>
              A plachy Buyon
				    </p>
			  </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-xs-6">
          <img src="public/image/contacter.png" class="img-contact" alt="Responsive image" id="taille_ctct" >
			     <p class="p_contact">	Par téléphone au : 06 20 00 16 56 </br>
				        Ou via nôtre formulaire:</br>
				    </p>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-xs-6">
          <div class="w-100"> <!-- Le lien google map ici -->
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d41196.21096287769!2d2.1832232139172767!3d49.80931967426198!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e79ce19f544249%3A0x40af13e8161fd10!2s80160+Plachy-Buyon!5e0!3m2!1sfr!2sfr!4v1561726797714!5m2!1sfr!2sfr" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>

          </div>
        </div>

        <div class="col">

          <form class="form_contact">

            <div class="form-row">
              <div class="col-md-4">Nom :
                <input type="text" class="form-control-sm" placeholder="" required>
              </div>
              
                <div class="col-md-4" id="espace_form">Prénom :
                  <input  type="text" class="form-control-sm" placeholder="" required>
                </div>
            </div>
     
            <div class="form-row">
            <div class="col-md-4">
              <label for="inputAddress">Code postal :</label>
              <input type="text" class="form-control-sm" id="inputAddress" placeholder="5 chiffres attendus" required>
            </div>

            <div class="col-md-4" id="espace_form"> 
              <label for="inputCity" required>Ville :</label>
              <input type="text" class="form-control-sm" id="inputCity" placeholder="" required >
            </div>
          </div>

          <div class="form-row ">
            <div class="col-md-4">
              <label for="inputEmail4" id="inputEmail4">Email :</label>
                <input type="email" class="form-control-sm" id="inputEmail4" placeholder="nomprenom@gmail.com"required>
            </div>

            <div class="col-md-4" id="espace_form">
              <label for="inputtel4">Téléphone :</label>
                <input type="tel" class="form-control-sm" id="inputtel4" placeholder="saisir vos 10 chiffres" required>
            </div>
          </div>

            <div class="form-row justify-content-between" > 
            <label for="validationTextarea"> Vôtre message :</label>
                <textarea class="form-control" id="validationTextarea" placeholder="Merci de bien vouloir nous expliquer clairement vôtre requêtes" row="3"required></textarea>
          </div>

          <div class="form-row ">
            <div class="col-md-5">
              <button ><a href="dispo.html">Retour disponibilités chatons</a></button>
            </div>

            <div class="col-md-4 " id="espace_form">
                <button  type="submit">Envoyer</button>
            </div>
            </div>
          </div>
          
        </form>

</div>
</div>
</div>
{% endblock body %}
